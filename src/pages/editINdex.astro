---
import BaseLayout from "../layouts/BaseLayout.astro";
import WorkCard from "../components/WorkCard.astro";
import { getCollection } from "astro:content";

const work = await getCollection("work");
const featured = work
  .filter((e) => e.data.featured)
  .slice(0, 6);
---

<BaseLayout
  title="Alisia Martinez — Experience Designer + Prototyper"
  description="I design and build experiences people can feel—digital, immersive, and story-led."
>
  <!-- HERO DIFFF -->
  <section class="grid md:grid-cols-[1fr_auto_1fr] gap-10 items-start">
    <!-- Left -->
    <div class="space-y-6">
      <h1 class="h1">
        I design and build experiences people can feel—digital, immersive, and story-led.
      </h1>

      <p class="muted text-lg max-w-xl">
        Prototyping • XR • Interaction systems • Storytelling
      </p>

      <div class="flex gap-3">
        <a class="btn" href="/work">View work</a>
        <a class="btnGhost" href="/watch">Watch</a>
      </div>
    </div>

    <!-- Vertical divider (deck-like) -->
    <div class="hidden md:block w-px bg-black/10 self-stretch"></div>

    <!-- Right -->
    <div class="card p-6">
      <div class="label">Signature lanes</div>
      <div class="mt-4 grid grid-cols-2 gap-3 text-sm">
        <a class="card cardHover p-4" href="/work?tag=Prototyping">Interactive / Prototypes</a>
        <a class="card cardHover p-4" href="/work?tag=XR%2FVR">Immersive / XR</a>
        <a class="card cardHover p-4" href="/watch">Stories / Films</a>
        <a class="card cardHover p-4" href="/playground">Live Experiences</a>
      </div>
    </div>
  </section>

  <!-- Divider -->
  <div class="line my-16" />

  <!-- SELECTED WORK -->
  <section class="space-y-6">
    <div class="flex items-end justify-between">
      <h2 class="h2">Selected work</h2>
      <a class="text-sm muted hover:text-black" href="/work">All work →</a>
    </div>

    <div class="grid md:grid-cols-2 gap-4">
      {featured.map((e) => (
        <WorkCard
          href={`/work/${e.slug}`}
          title={e.data.title}
          description={e.data.description}
          tags={e.data.tags}
          roles={e.data.roles}
        />
      ))}
    </div>
  </section>

  <!-- Divider -->
  <div class="line my-16" />

  <!-- POV -->
  <section class="card p-8">
    <div class="label">Point of view</div>

    <p class="mt-4 text-lg max-w-3xl">
      I build prototypes and stories that make ambiguity tangible—so teams and audiences can feel what’s true.
    </p>

    <ul class="mt-5 muted list-disc pl-5 space-y-2">
      <li>Pacing & feedback: every moment answers “what happened” and “what next.”</li>
      <li>Clarity under uncertainty: prototypes turn opinions into testable artifacts.</li>
      <li>Delight grounded in usability: charm only matters if it helps understanding.</li>
    </ul>
  </section>
</BaseLayout>