---
const { src, alt = "", caption = "" } = Astro.props;
---

<figure class="case-phone-media">
  <div class="case-phone-media__frame">
    <img src={src} alt={alt} loading="lazy" />
  </div>
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  .case-phone-media {
    margin: 28px auto;
    max-width: 380px;
  }

  .case-phone-media__frame {
    border: 1px solid rgba(17, 17, 17, 0.18);
    border-radius: 28px;
    background: #ffffff;
    padding: 10px;
    box-shadow: 0 12px 30px rgba(17, 17, 17, 0.08);
  }

  .case-phone-media__frame img {
    display: block;
    width: 100%;
    border-radius: 20px;
    border: 1px solid rgba(17, 17, 17, 0.1);
  }

  figcaption {
    margin-top: 10px;
    font-size: 0.9rem;
    color: rgba(17, 17, 17, 0.62);
    text-align: center;
  }
</style>
