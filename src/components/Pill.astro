---
const { text, tone = "default", iconSrc } = Astro.props;

const cls =
  tone === "muted"
    ? "pill-muted"
    : tone === "pop"
      ? "pill-pop"
      : "pill-default";
---

<span class={`pill ${cls}`}>
  {iconSrc ? (
    <img src={iconSrc} alt={text ?? ""} class="h-4 w-auto" loading="lazy" />
  ) : (
    text
  )}
</span>